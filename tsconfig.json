{
  "compilerOptions": {
    "target": "es6", 
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": ".", // Añadido para mejorar la resolución de módulos
    "rootDir": ".", // Añadido para definir el directorio raíz
    "strictNullChecks": true, // Añadido para mejorar la detección de errores
    "strictFunctionTypes": true, // Añadido para mejorar la detección de errores
    "strictPropertyInitialization": true, // Añadido para mejorar la detección de errores
    "noImplicitAny": true, // Añadido para mejorar la detección de errores
    "noImplicitThis": true, // Añadido para mejorar la detección de errores
    "alwaysStrict": true // Añadido para mejorar la detección de errores
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/lib/placeholder-data.js",
    "app/ui/mapa/mapa.tsx",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}