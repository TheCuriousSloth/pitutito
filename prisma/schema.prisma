// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}

model referenciales {
  id               String        @id @default(uuid())
  colaborador_id   String
  colaborador      colaboradores @relation(fields: [colaborador_id], references: [id])
  lat              Float
  lng              Float
  fojas            Int
  numero           Int
  anio             Int
  cbr              String
  comprador        String
  vendedor         String
  predio           String
  comuna           String
  rol              String
  fechaDeEscritura DateTime
  superficie       Float
  monto            Int
  observaciones    String?
}

model users {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}

model colaboradores {
  id            String          @id @default(uuid())
  name          String
  email         String          @unique
  image_url     String
  referenciales referenciales[]
}
